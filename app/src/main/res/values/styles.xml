<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--LinearProgressIndicator-->
    <style name="LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <!--  TextView  -->
    <style name="Text.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Medium" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Small" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <!--  CardView  -->
    <style name="CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginVertical" tools:targetApi="o">16dp</item>
        <item name="cardUseCompatPadding">false</item>
    </style>

    <!--  Checkbox  -->
    <style name="Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
    </style>
</resources>